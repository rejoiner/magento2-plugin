<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.newslettrer.subscriber.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" as="added_to_rejoiner">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Added to Rejoiner</argument>
                    <argument name="index" xsi:type="string">added_to_rejoiner</argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="options" xsi:type="array">
                        <item name="rejoiner_added" xsi:type="array">
                            <item name="value" xsi:type="string">1</item>
                            <item name="label" xsi:type="string" translate="true">Yes</item>
                        </item>
                        <item name="rejoiner_not_added" xsi:type="array">
                            <item name="value" xsi:type="string">2</item>
                            <item name="label" xsi:type="string" translate="true">No</item>
                        </item>
                    </argument>
                    <argument name="header_css_class" xsi:type="string">col-rejoiner</argument>
                    <argument name="column_css_class" xsi:type="string">col-rejoiner</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
