<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="authentication" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="rejoiner-merketing-subscription-authentication" xsi:type="array">
                                            <item name="component" xsi:type="string">Rejoiner_Acr/js/checkout/view/subscription</item>
                                            <item name="displayArea" xsi:type="string">additional-login-form-fields</item>
                                            <item name="template" xsi:type="string">Rejoiner_Acr/checkout/view/subscription_authentication</item>
                                        </item>
                                    </item>
                                </item>
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="customer-email" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="additional-login-form-fields" xsi:type="array">
                                                                    <item name="children" xsi:type="array">
                                                                        <item name="rejoiner-merketing-subscription-login" xsi:type="array">
                                                                            <item name="component" xsi:type="string">Rejoiner_Acr/js/checkout/view/subscription</item>
                                                                            <item name="displayArea" xsi:type="string">rejoiner-merketing-subscription-login</item>
                                                                            <item name="template" xsi:type="string">Rejoiner_Acr/checkout/view/subscription</item>
                                                                            <item name="config" xsi:type="array">
                                                                                <item name="shouldObserveParentEmail" xsi:type="string">1</item>
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                        <item name="before-form" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="rejoiner-merketing-subscription-guest" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Rejoiner_Acr/js/checkout/view/subscription</item>
                                                                    <item name="displayArea" xsi:type="string">rejoiner-merketing-subscription</item>
                                                                    <item name="template" xsi:type="string">Rejoiner_Acr/checkout/view/subscription_guest</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="customer-email" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="additional-login-form-fields" xsi:type="array">
                                                                    <item name="children" xsi:type="array">
                                                                        <!--<item name="rejoiner-merketing-subscription" xsi:type="array">-->
                                                                            <!--<item name="component" xsi:type="string">Rejoiner_Acr/js/checkout/view/subscription</item>-->
                                                                            <!--<item name="displayArea" xsi:type="string">rejoiner-merketing-subscription</item>-->
                                                                            <!--<item name="template" xsi:type="string">Rejoiner_Acr/checkout/view/subscription</item>-->
                                                                        <!--</item>-->
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
