        <referenceContainer name="after.body.start">
            <block class="Rejoiner\Acr\Block\Base" name="rejoiner_base" ifconfig="checkout/rejoiner_acr/enabled" template="Rejoiner_Acr::rejoiner_acr/base.phtml" after="-" />
